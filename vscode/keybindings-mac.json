// Place your key bindings in this file to override the defaultsauto[]
[
  // NAVIGATE FROM PANELS
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "sideBarFocus && explorerViewletVisible"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "sideBarFocus && explorerViewletVisible && !filesExplorerFocus"
  },
  // NAVIGATE FROM PANELS
  // NAVIGATE ON GIT DIFFS
  {
    "key": "ctrl+h",
    "command": "workbench.action.compareEditor.focusSecondarySide",
    "when": "isInDiffEditor && editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.compareEditor.focusPrimarySide",
    "when": "isInDiffEditor && editorTextFocus"
  },
  {
    "key": "q",
    "command": "git.openFile",
    "when": "isInDiffEditor && editorTextFocus && vim.mode == 'Normal'"
  },
  // NAVIGATE ON GIT DIFFS
  // NAVIGATE ON AUTOCOMPLETE SUGGESTIONS
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  // NAVIGATE ON AUTOCOMPLETE SUGGESTIONS
  // NAVIGATE ON COMMAND PALETTE
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  // NAVIGATE ON COMMAND PALETTE
  // NAVIGATE ON QUICK FIX
  {
    "key": "ctrl+k",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  // NAVIGATE ON QUICK FIX
  // NAVIGATE ON EXPLORER
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "g g",
    "command": "list.focusFirst",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+g",
    "command": "list.focusLast",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "enter",
    "command": "list.toggleExpand",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "space e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "f",
    "command": "list.find",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "v",
    "command": "list.toggleSelection",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "escape",
    "command": "",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+c",
    "command": "runCommands",
    "args": {
      "commands": [
        "list.select",
        "github.copilot.chat.attachFile",
        "workbench.action.closeActiveEditor"
      ]
    },
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !explorerResourceIsOpen"
  },
  {
    "key": "ctrl+e",
    "command": "runCommands",
    "args": {
      "commands": [
        "list.select",
        "github.copilot.edits.attachFile",
        "workbench.action.closeActiveEditor"
      ]
    },
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus && !explorerResourceIsOpen"
  },
  {
    "key": "shift+w",
    "command": "list.collapseAll",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+q",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "q",
    "command": "workbench.action.closeActiveEditor",
    "when": "explorerViewletVisible && openEditorsFocus && !inputFocus"
  },
  {
    "key": "shift+w",
    "command": "workbench.action.closeAllEditors",
    "when": "explorerViewletVisible && openEditorsFocus && !inputFocus"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.increaseViewSize",
    "when": "sideBarFocus"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.decreaseViewSize",
    "when": "sideBarFocus"
  },
  // NAVIGATE ON EXPLORER
  // NAVIGATE ON RIGHT SIDE BAR
  {
    "key": "space q",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "auxiliaryBarFocus && !inputFocus"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.decreaseViewSize",
    "when": "auxiliaryBarFocus"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.increaseViewSize",
    "when": "auxiliaryBarFocus"
  },
  // NAVIGATE ON RIGHT SIDE BAR
  // NAVIGATE ON TERMINAL
  {
    "key": "alt+j",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
  },
  {
    "key": "escape",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },
  // NAVIGATE ON TERMINAL
  // NAVIGATE ON SOURCE CONTROL
  {
    "key": "ctrl+j",
    "command": "workbench.scm.action.focusNextResourceGroup",
    "when": "sideBarVisible && focusedView == 'workbench.scm'"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.scm.action.focusNextInput",
    "when": "sideBarVisible && focusedView == 'workbench.scm'"
  },
  // NAVIGATE ON SOURCE CONTROL
  // NAVIGATE ON SEARCH
  {
    "key": "ctrl+j",
    "command": "search.action.focusSearchList",
    "when": "searchViewletVisible && searchViewletFocus"
  },
  {
    "key": "ctrl+k",
    "command": "search.action.focusSearchFromResults",
    "when": "searchViewletVisible && searchViewletFocus"
  },
  {
    "key": "ctrl+r",
    "command": "search.action.replace",
    "when": "searchViewletVisible && searchViewletFocus"
  },
  {
    "key": "q",
    "command": "search.action.remove",
    "when": "searchViewletVisible && searchViewletFocus"
  },
  // NAVIGATE ON SEARCH
  // NAVIGATE ON SEARCH IN EDITOR
  {
    "key": "ctrl+j",
    "args": {
      "commands": [
        "search.action.focusNextSearchResult",
        "extension.vim_escape"
      ]
    },
    "command": "runCommands",
    "when": "inSearchEditor"
  },
  {
    "key": "ctrl+k",
    "command": "search.action.focusQueryEditorWidget",
    "when": "inSearchEditor"
  },
  {
    "key": "ctrl+s",
    "command": "searchEditorApplyChanges.apply",
    "when": "inSearchEditor"
  },
  {
    "key": "q",
    "command": "search.searchEditor.action.deleteFileResults",
    "when": "inSearchEditor && editorTextFocus && vim.mode == 'Normal'"
  },
  // NAVIGATE ON SEARCH IN EDITOR
  // VIM GLOBAL COMMANDS
  {
    "key": "ctrl+shift+,",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+.",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+;",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.decreaseViewSize",
    "when": "editorFocus"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.increaseViewSize",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+,",
    "command": "editor.action.goToDeclaration",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+n",
    "command": "editor.action.goToImplementation",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+m",
    "command": "editor.action.goToReferences",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+.",
    "command": "editor.action.quickFix",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.navigateBack",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+i",
    "command": "workbench.action.navigateForward",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "q",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorIsOpen && resourceFilename == vscodeHarpoon.harpoon"
  },
  {
    "key": "escape",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible &&sideBarVisible && sideBarFocus"
  },
  // VIM GLOBAL COMMANDS
  // OTHER DEFAULT THINGS
  {
    "key": "cmd+t", // MAC
    "command": "workbench.action.newWindow",
    "when": "true"
  },
  {
    "key": "cmd+w", // MAC
    "command": "workbench.action.closeWindow",
    "when": "true"
  },
  {
    "key": "cmd+o", // MAC
    "command": "workbench.action.files.openFolder",
    "when": "true"
  },
  {
    "key": "shift+alt+p",
    "command": "workbench.action.openView"
  }
  // OTHER DEFAULT THINGS
]
